<h1> Edit this post!</h1>

<%= form_for(@post, html: {multipart: true}) do |f| %>

    <ul class="list-unstyled">
        <div class="form-group">
            <li><%= f.label :title %></li>
            <li><%= f.text_field :title , class: "form-control" %></li>
        </div>
        <div class="form-group">
            <li><%= f.label :body, 'Description' %></li>
            <li><%= f.text_area :body , class: "form-control" %></li>
        </div>
        <span>
             <%= f.file_field :picture %>
        </span>
        <%= f.submit "Edit Post" , class: " btn btn-default btn-lg" %>
        <%= link_to "Cancel", posts_path, class: " btn btn-default btn-lg" %>
    </ul>
<%end%>
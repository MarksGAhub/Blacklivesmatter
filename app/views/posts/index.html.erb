<h1>Recent Stories Page </h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table class=" table table-hover">
                <tr >
                    <td> <strong>Blog </strong></td>
                    <td> <strong>Description</strong></td>
                    <td></td>
                </tr>
                <% @posts.each do | p | %>
                <%= image_tag p.picture.url if p.picture? %>
                <tr class=" active " >
                    <td><%= p.title %></td>
                    <td><%= p.body %></td>
                    <td><%= link_to "Show Story", post_path(p) , class: "btn btn-primary btn-xs" %></td>
                    <td><%= link_to "Edit Story", edit_post_path(p) , class: "btn btn-primary btn-xs" %></td>
                    <td><%= link_to "Delete Story",[p, @comment] , method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: "btn btn-primary btn-xs" %></td>
                </tr>
                <%end%>
            </table>

        </div>
    </div>
</div>

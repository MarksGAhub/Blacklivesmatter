<h1>Share a story here</h1>

<%= form_for(@post, html: {multipart: true}) do |f| %>

<ul>
   <div class="row">
       <div class ="col-md-6 col-md-offset-3">
            <div class="form-group">
                <li><%= f.label :title%></li>
                <li><%= f.text_field :title, class: "form-control"%></li>
            </div>
            <div class="form-group">
                <li><%= f.label :body%></li>
                <li><%= f.text_area :body, class: "form-control"%></li>
            </div>
            <div class="form-group">
                <li><%= f.label :picture%></li>
                <li><%= f.file_field :picture, class: "form-control"%></li>
            </div>

            <li><%= f.submit "Create Post", class: "btn btn-default" %></li>
        </ul>
    </div>
</div>

<% end %>

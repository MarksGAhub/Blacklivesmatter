<div class="container">
    <div class="page-header">
        <h1 class="signin"><%= @post.title %></h1>
        <p class="signin nright"><%= @post.date_published %></p>
        <div><%= image_tag @post.picture.url %></div>
    </div>
    <p class="bg-info"><h3 class="signin"><%= @post.body %></h3></p>
    <% @post.comments.each do | comment | %>
        <div class="panel panel-default">
            <div class="panel-body">
                <%= comment.comment %>
                <br>
                <%= comment.user%>
                <!-- changed comment.user to users -->

            </div>
        </div>
    <%end%>
    <%= render 'posts/comment_form' %>
</div>
